<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Feedback"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:background="@drawable/feedback_label_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addfeedback"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Add Feedback"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/whitepattern"
                app:layout_constraintEnd_toStartOf="@+id/editfeedback"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editfeedback"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Edit Feedback"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/whitepattern"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/addfeedback"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:paddingStart="10dp"
                android:text="Your Feedback"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:background="@drawable/feedback_label_bg"
                app:layout_constraintStart_toStartOf="@+id/addfeedback"
                app:layout_constraintTop_toBottomOf="@+id/addfeedback" />

            <androidx.cardview.widget.CardView
                android:id="@+id/feedbackCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/writefeedback"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:hint="Write your Feedback here...."
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:padding="12dp"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Submit"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/whitepattern"
                app:layout_constraintEnd_toEndOf="@+id/feedbackCard"
                app:layout_constraintStart_toStartOf="@+id/feedbackCard"
                app:layout_constraintTop_toBottomOf="@+id/feedbackCard" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>